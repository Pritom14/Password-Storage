<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nitsilchar.hp.passwordStorage.activity.DetailsActivity">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/displaySiteTextId"
                    android:textColor="#000000"
                    android:layout_marginTop="15dp"
                    android:textSize="20sp"
                    android:text="@string/details_xml_acnt"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/displaySitePassId"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    android:text="@string/details_xml_pass"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_below="@+id/displaySiteTextId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/layout1"
        android:layout_centerHorizontal="true">


        <android.support.v7.widget.CardView
            android:layout_width="200dp"
            android:id="@+id/card1"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/showpassword"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:padding="2dp"
                android:text="@string/details_xml_bshow"
                android:textSize="17sp"
                android:textStyle="bold" />
           </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/card2"
            android:layout_width="150dp"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/modifyButton"
                android:padding="2dp"
                android:layout_gravity="center"
                android:text="@string/details_xml_bmodify"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:textSize="17.5sp"
                android:textStyle="bold"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.CardView>
    </RelativeLayout>



</RelativeLayout>



