<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nitsilchar.hp.passwordStorage.activity.LoginActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/header_text_marginTop"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="@string/pass_change"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="@dimen/header_text"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/linearlayoutmargin"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                app:passwordToggleDrawable="@drawable/icon_selector"
                app:passwordToggleTint="@android:color/black"
                app:hintTextAppearance="@android:color/holo_blue_dark"
                android:textColorHint="@android:color/darker_gray">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/old_pass"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/header_text_marginTop"
                    android:hint="Enter current password"
                    android:inputType="textPassword"
                    android:layout_marginTop="@dimen/space"
                    android:drawablePadding="@dimen/drawablepadding"
                    android:drawableStart="@drawable/password"
                    android:drawableLeft="@drawable/password"
                    android:paddingEnd="@dimen/drawablepadding"
                    android:paddingStart="@dimen/drawablepadding"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textColorHint="@android:color/darker_gray"
                    android:backgroundTint="@color/light_blue_500" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                app:passwordToggleDrawable="@drawable/icon_selector"
                app:passwordToggleTint="@android:color/black"
                app:hintTextAppearance="@android:color/holo_blue_dark"
                android:textColorHint="@android:color/darker_gray">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/new_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/header_text_marginTop"
                    android:layout_marginTop="@dimen/space"
                    android:drawablePadding="@dimen/drawablepadding"
                    android:drawableStart="@drawable/password"
                    android:drawableLeft="@drawable/password"
                    android:hint="Enter New Password"
                    android:inputType="textPassword"
                    android:paddingEnd="@dimen/drawablepadding"
                    android:paddingStart="@dimen/drawablepadding"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textColorHint="@android:color/darker_gray"
                    android:backgroundTint="@color/light_blue_500" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                app:passwordToggleDrawable="@drawable/icon_selector"
                app:passwordToggleTint="@android:color/black"
                app:hintTextAppearance="@android:color/holo_blue_dark"
                android:textColorHint="@android:color/darker_gray">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edt_password1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/header_text_marginTop"
                    android:layout_marginTop="@dimen/space"
                    android:drawablePadding="@dimen/drawablepadding"
                    android:drawableStart="@drawable/password"
                    android:drawableLeft="@drawable/password"
                    android:hint="Verify New Password"
                    android:inputType="textPassword"
                    android:paddingEnd="@dimen/drawablepadding"
                    android:paddingStart="@dimen/drawablepadding"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textColorHint="@android:color/darker_gray"
                    android:backgroundTint="@color/light_blue_500" />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/buttonPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/space"
                android:background="@drawable/greenbutton">

                <Button
                    android:id="@+id/btn_change"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/holo_blue_dark"
                    android:text="CHANGE"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="@dimen/header_text"
        android:layout_height="@dimen/header_text"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/linearlayoutmargin"
        android:visibility="gone" />

</RelativeLayout>
